    {
      "code": "const onSomething = useEffectEvent(callback)",
      "language": "javascript"
    },
    {
      "code": "import { useEffectEvent, useEffect } from 'react';function ChatRoom({ roomId, theme }) {  const onConnected = useEffectEvent(() => {    showNotification('Connected!', theme);  });  useEffect(() => {    const connection = createConnection(serverUrl, roomId);    connection.on('connected', () => {      onConnected();    });    connection.connect();    return () => connection.disconnect();  }, [roomId]);  // ...}",
      "language": "javascript"
    },
    {
      "code": "import { useEffect, useContext, useEffectEvent } from 'react';function Page({ url }) {  const { items } = useContext(ShoppingCartContext);  const numberOfItems = items.length;  const onNavigate = useEffectEvent((visitedUrl) => {    logVisit(visitedUrl, numberOfItems);  });  useEffect(() => {    onNavigate(url);  }, [url]);  // ...}",
      "language": "javascript"
    }
